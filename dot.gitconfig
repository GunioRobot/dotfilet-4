[core]
  editor = /usr/bin/vim
  excludesfile = ~/.gitignore
[user]
  name = Takumi Tsunokake
  email = t.bekkou@gmail.com
[color]
  ui = auto
[alias]
  a = add
  ad = add
  ada = add -A

  bl = blame
  br = branch
  bra = branch -a
  brd = branch -d
  brdf = branch -D # BRanch Delete Force
  brm = branch -m
  brr = branch -r

  ca = commit -v --amend
  ci = commit -v
  cl = clone
  cm = commit -m
  co = checkout
  cob = checkout -b

  di = diff
  dic = diff --cached

  gr = grep

  lo = log --graph --format='[%h] %s'
  lp = log -p
  lv = log --graph --format='[%h %cd] %s (%cn)' --date=local # Log Verbose

  mg = merge
  mgnf = merge --no-ff # MerGe No Fast-foreword

  pl = pull --prune # always delete stale remote branches
  pr = pull --rebase
  ps = push
  pst = push --tags

  rb = rebase
  rbi = rebase -i
  rbrd = push --delete origin # Remote BRanch Delete
  rh = reset --hard
  rmc = rm --cached
  rs = reset

  sc = shortlog -sn # SCouter
  sh = stash
  st = status

  t = tag
